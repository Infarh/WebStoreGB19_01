@model IEnumerable<WebStore.Domain.Entities.Product>
@{
    ViewData["Title"] = "Список продуктов";
}

<p>
    <a asp-area="Admin" asp-controller="Home" asp-action="Create">Создать</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(m => m.Id)</th>
        <th>@Html.DisplayNameFor(m => m.Name)</th>
        <th>@Html.DisplayNameFor(m => m.Order)</th>
        <th>@Html.DisplayNameFor(m => m.SectionId)</th>
        <th>@Html.DisplayNameFor(m => m.BrandId)</th>
        <th>@Html.DisplayNameFor(m => m.ImageUrl)</th>
        <th>@Html.DisplayNameFor(m => m.Price)</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => product.Id)</td>
                <td>@Html.DisplayFor(m => product.Name)</td>
                <td>@Html.DisplayFor(m => product.Order)</td>
                <td>@Html.DisplayFor(m => product.SectionId)</td>
                <td>@Html.DisplayFor(m => product.BrandId)</td>
                <td>@Html.DisplayFor(m => product.ImageUrl)</td>
                <td>@Html.DisplayFor(m => product.Price)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Home", new { area = "Admin", id = @product.Id }) |
                    @Html.ActionLink("Details", "Details", "Home", new { area = "Admin", id = @product.Id }) |
                    @Html.ActionLink("Delete", "Delete", "Home", new { area = "Admin", id = @product.Id }, new { @class = "text-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

