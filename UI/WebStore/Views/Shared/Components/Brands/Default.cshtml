@model WebStore.Domain.ViewModels.Product.BrandCompleteViewModel

<div class="brands_products">
    <!--brands_products-->
    <h2>Brands</h2>
    <div class="brands-name">
        <ul class="nav nav-pills nav-stacked">
            @foreach (var brand in Model.Brands)
            {
                <li @(brand.Id == Model.CurrentBrandId ? "class=active" : null)>
                    <a asp-controller="Catalog" asp-action="Shop" asp-route-BrandId="@brand.Id">
                        @*<span class="pull-right">(@brand.ProductsCount)</span>*@@brand.Name
                    </a>
                </li>
            }
        </ul>
    </div>
</div><!--/brands_products-->